{
    "name": "drift/phpunit-bridge",
    "description": "PHPUnit bridge for custom DriftPHP methods",
    "keywords": ["phpunit", "reactphp", "driftphp", "drift"],
    "homepage": "https://github.com/driftphp/phpunit-bridge",
    "license": "MIT",

    "authors": [
        {
            "name": "Marc Morera",
            "email": "yuhu@mmoreram.com"
        }
    ],

    "require": {
        "php": "^7.4 || ^8",
        "symfony/process": "^5.0",
        "drift/http-kernel": "^0.1.15",
        "mmoreram/base-bundle": "^2.3",
        "clue/block-react": "^1.3",
        "drift/server": "^0.1.21",
        "phpunit/phpunit": "^9"
    },
    "autoload": {
        "psr-4": {
            "Drift\\PHPUnit\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drift\\PHPUnit\\Tests\\": "tests"
        }
    }
}